<fest:template xmlns:fest="http://fest.mail.ru" context_name="user">
    <div id="body">
        <div id="hello">
            <p>Hello, <fest:value>user.name</fest:value>!</p>
        </div>

        <div id="wait">
            <p>Prepare yourself. Wait for enemy!</p>
        </div>

        <div id="gameplay" style="display: none">
            <div id="score">
                <p><fest:value>user.name</fest:value>: <span id="myScore">0</span></p>

                <p><span id="enemyName"></span>: <span id="enemyScore">0</span></p>
            </div>

            <form name="gamePlay" action="">
                <input class="bla" id='sena' type="button" name="submit" value="Press to win!"/>
            </form>
        </div>

        <div id="gameOver" style="display: none">
            <p>Game over! You are <span id="win"></span></p>
        </div>

    </div>
</fest:template>