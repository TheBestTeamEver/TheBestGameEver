<fest:template xmlns:fest="http://fest.mail.ru" context_name="players">
	<div class="main">
		<h1 class="main__header">Blow the ball</h1>
		<p class="main__paragraph">Scoreboard</p>
	</div>	
	<div class="window window_scoreboard">
    	<table class="scoreboard__table table-hover">
      		<thead>
        		  <tr class="scoreboard__tr">
 					      <th class="scoreboard__tr_num">Num.</th>       	
          			<th class="scoreboard__tr_userName">Username</th>
          			<th class="scoreboard__tr_score">Score</th>
        		  </tr>
      		</thead>
      		<tbody>
      			<fest:each iterate="players" index="i" value="player">
        			<tr  class="scoreboard__tr">
          			<td class="scoreboard__tr_num"><fest:value>++i</fest:value></td>
      					<td class="scoreboard__tr_userName"><fest:value>player.name</fest:value></td>
      					<td class="scoreboard__tr_score"><fest:value>player.score</fest:value></td>
    				  </tr>
    			</fest:each>
      		</tbody>
    	</table>
  	</div>

</fest:template>