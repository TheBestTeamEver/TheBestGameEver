<fest:template xmlns:fest="http://fest.mail.ru" context_name="players">
	<div class="main">
		<h1 class="main__header">Blow the ball</h1>
		<p class="main__paragraph">Scoreboard</p>
	</div>	
	<div class="window window_scoreboard">
    	<table class="scoreboard__table table-hover">
      		<thead>
        		<tr class="scoreboard__tr">
 					      <th>Num.</th>       	
          			<th>Username</th>
          			<th>Score</th>
        		</tr>
      		</thead>
      		<tbody>
      			<fest:each iterate="players" index="i" value="player">
        			<tr>
        				<th scope="row"><fest:value>++i</fest:value></th>
    					<td><fest:value>player.name</fest:value></td>
    					<td><fest:value>player.score</fest:value></td>
    				</tr>
    			</fest:each>
      		</tbody>
    	</table>
  	</div>

</fest:template>